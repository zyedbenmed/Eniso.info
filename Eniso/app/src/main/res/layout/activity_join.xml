<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zyed.eniso.join"
    android:orientation="vertical"
    android:padding="50dp"
    android:background="@color/darkblue">





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="SIGN UP"
            android:layout_gravity="center"/>
        <EditText
            android:textColorHint="@color/white"
            android:layout_marginTop="80dp"
            android:id="@+id/name"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Name" />
        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/surname"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Surname" />
        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/cin"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_credit_card_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="CIN" />
        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/branch"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_group_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Branch (IA/EI/Meca...)" />
        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/group"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_format_list_numbered_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Groupe (IA1.2/EI2.3...)" />
        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/mail"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="E-mail" />


        <Button
            android:layout_gravity="center"

            android:id="@+id/signup"
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle"
            android:text="SEND"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_send_black_24dp"/>

    </LinearLayout>







